---
import Layout from "../../layouts/Layout.astro";
import Trash from "../../components/icons/Trash.astro";
import Calendar from "../../components/icons/Calendar.astro";
import Phone from "../../components/icons/Phone.astro";
import Envelope from "../../components/icons/Envelope.astro";
import ArrowsRotate from "../../components/icons/ArrowsRotate.astro";
import ArrowLeft from "../../components/icons/ArrowLeft.astro";
import ArrowRight from "../../components/icons/ArrowRight.astro";
---

<Layout title="Admin - Správy" showHeader={false} showFooter={false}>
    <div class="min-h-screen bg-gray-50 flex flex-col font-sans">
        <!-- Admin Header -->
        <header class="bg-[#1f2937] text-white shadow-xl sticky top-0 z-50">
            <div
                class="max-w-300 mx-auto px-4 h-16 md:h-20 flex items-center justify-between"
            >
                <div class="flex items-center gap-4">
                    <div class="bg-white p-1.5 rounded-lg shadow-sm">
                        <img
                            src="/images/brand/logo.png"
                            alt="Logo"
                            class="h-7 md:h-9 w-auto"
                        />
                    </div>
                    <div class="hidden sm:block h-8 w-px bg-white/10 mx-2">
                    </div>
                    <span
                        class="text-base md:text-lg font-black uppercase tracking-widest text-[#60a5fa] truncate"
                        >Administrácia správ</span
                    >
                </div>
                <button
                    id="logout-btn"
                    class="px-4 md:px-6 py-2 bg-red-500 hover:bg-red-600 text-white text-xs font-black uppercase tracking-widest rounded-xl transition-all duration-300 shadow-lg shadow-red-500/20 active:scale-95"
                >
                    Odhlásiť sa
                </button>
            </div>
        </header>

        <main class="grow py-8 md:py-12 px-4">
            <div class="max-w-275 mx-auto">
                <div
                    class="flex flex-col sm:flex-row justify-between items-start sm:items-center gap-6 mb-10 md:mb-12"
                >
                    <div>
                        <h1
                            class="m-0 text-3xl md:text-4xl font-black text-gray-900 tracking-tight relative inline-block pb-3 after:content-[''] after:absolute after:left-0 after:bottom-0 after:h-2 after:w-2/3 after:bg-linear-to-r after:from-primary after:to-[#67a8ff] after:rounded-full after:shadow-[0_2px_6px_rgba(15,98,254,0.35)]"
                        >
                            Prijaté správy
                        </h1>
                        <p
                            class="mt-4 text-gray-500 font-bold text-xs uppercase tracking-[0.2em] italic"
                        >
                            Prehľad doručených kontaktov
                        </p>
                    </div>
                    <button
                        id="refresh-btn"
                        class="px-8 py-3 bg-primary hover:bg-[#0353e9] text-white font-black uppercase text-xs tracking-widest rounded-xl transition-all duration-300 shadow-xl shadow-blue-500/25 active:scale-95 flex items-center gap-2 group"
                    >
                        <ArrowsRotate
                            class="h-4 w-4 transition-transform duration-500 group-hover:rotate-180"
                        />
                        Obnoviť zoznam
                    </button>
                </div>

                <div
                    id="loading"
                    class="text-center py-32"
                    style="display: none;"
                >
                    <div
                        class="inline-block animate-spin rounded-full h-14 w-14 border-[6px] border-gray-200 border-t-primary shadow-inner"
                    >
                    </div>
                    <p
                        class="mt-6 text-gray-400 font-bold text-xs uppercase tracking-widest animate-pulse"
                    >
                        Načítavam dáta...
                    </p>
                </div>

                <div id="messages-container" class="grid gap-6 md:gap-8">
                    <!-- Messages will be loaded here -->
                </div>

                <div
                    id="pagination-controls"
                    class="hidden flex-wrap justify-center items-center gap-4 md:gap-6 mt-12"
                >
                    <button
                        id="prev-page"
                        class="flex items-center gap-2 px-4 md:px-5 py-2.5 bg-white border border-gray-200 rounded-xl text-xs font-black uppercase tracking-widest text-[#1f2937] hover:bg-gray-50 hover:border-primary/30 disabled:opacity-50 disabled:cursor-not-allowed disabled:hover:bg-white disabled:hover:border-gray-200 transition-all duration-300 shadow-sm active:scale-95 group"
                    >
                        <ArrowLeft
                            class="h-3 w-3 transition-transform group-hover:-translate-x-0.5 group-disabled:translate-x-0"
                        />
                        <span class="hidden sm:inline">Predchádzajúca</span>
                        <span class="sm:hidden">Späť</span>
                    </button>
                    <span
                        id="page-info"
                        class="text-xs font-black uppercase tracking-widest text-gray-400"
                    >
                        Strana <span id="current-page-num" class="text-primary"
                            >1</span
                        >
                    </span>
                    <button
                        id="next-page"
                        class="flex items-center gap-2 px-4 md:px-5 py-2.5 bg-white border border-gray-200 rounded-xl text-xs font-black uppercase tracking-widest text-[#1f2937] hover:bg-gray-50 hover:border-primary/30 disabled:opacity-50 disabled:cursor-not-allowed disabled:hover:bg-white disabled:hover:border-gray-200 transition-all duration-300 shadow-sm active:scale-95 group"
                    >
                        <span class="hidden sm:inline">Nasledujúca</span>
                        <span class="sm:hidden">Ďalej</span>
                        <ArrowRight
                            class="h-3 w-3 transition-transform group-hover:translate-x-0.5 group-disabled:translate-x-0"
                        />
                    </button>
                </div>

                <div
                    id="no-messages"
                    class="text-center py-32 bg-white border border-gray-100 rounded-3xl shadow-sm text-gray-400 hidden"
                >
                    <div class="flex justify-center mb-6 opacity-20">
                        <Envelope class="h-20 w-20" />
                    </div>
                    <p
                        class="font-bold text-sm uppercase tracking-widest italic"
                    >
                        Momentálne neevidujeme žiadne správy.
                    </p>
                </div>
            </div>
        </main>

        <footer class="bg-white border-t border-gray-100 py-10">
            <div class="max-w-300 mx-auto px-4 text-center">
                <p
                    class="text-gray-400 font-bold text-[10px] uppercase tracking-[0.25em]"
                >
                    &copy; {new Date().getFullYear()} SD Stavby - Administračný Panel
                </p>
            </div>
        </footer>
    </div>

    <!-- Hidden icon templates for JavaScript to reference -->
    <template id="trash-icon-template">
        <Trash class="h-4 w-4" />
    </template>
    <template id="calendar-icon-template">
        <Calendar class="h-4 w-4" />
    </template>
    <template id="phone-icon-template">
        <Phone class="h-4 w-4" />
    </template>
    <template id="envelope-icon-template">
        <Envelope class="h-4 w-4" />
    </template>

    <script>
        import { api, type Message } from "../../lib/api";
        import { format } from "date-fns";
        import { sk } from "date-fns/locale";

        // DOM elements
        const messagesContainer = document.getElementById("messages-container");
        const logoutBtn = document.getElementById("logout-btn");
        const refreshBtn = document.getElementById("refresh-btn");
        const loading = document.getElementById("loading");
        const noMessages = document.getElementById("no-messages");
        const paginationControls = document.getElementById(
            "pagination-controls",
        );
        const prevPageBtn = document.getElementById(
            "prev-page",
        ) as HTMLButtonElement;
        const nextPageBtn = document.getElementById(
            "next-page",
        ) as HTMLButtonElement;
        const currentPageNum = document.getElementById("current-page-num");

        let currentPage = 1;

        // Get icon HTML from templates
        const TRASH_ICON =
            document.getElementById("trash-icon-template")?.innerHTML ?? "";
        const CALENDAR_ICON =
            document.getElementById("calendar-icon-template")?.innerHTML ?? "";
        const PHONE_ICON =
            document.getElementById("phone-icon-template")?.innerHTML ?? "";
        const ENVELOPE_ICON =
            document.getElementById("envelope-icon-template")?.innerHTML ?? "";

        // Auth check
        async function checkAuth() {
            try {
                const isAuthenticated = await api.admin.checkAuth();
                if (!isAuthenticated) {
                    window.location.href = "/admin/login";
                } else {
                    await loadMessages();
                }
            } catch (e) {
                window.location.href = "/admin/login";
            }
        }

        // Load messages
        async function loadMessages() {
            if (loading) loading.style.display = "block";
            if (messagesContainer) messagesContainer.innerHTML = "";
            if (noMessages) noMessages.classList.add("hidden");
            if (paginationControls) paginationControls.classList.add("hidden");

            try {
                const response = await api.admin.getMessages(currentPage);
                const messages = response.data;

                if (messages.length === 0 && currentPage === 1) {
                    if (noMessages) noMessages.classList.remove("hidden");
                } else {
                    renderMessages(messages);
                    updatePagination(response.total, response.limit);
                }
            } catch (error) {
                console.error("Failed to load messages:", error);
                alert("Nepodarilo sa načítať správy.");
            } finally {
                if (loading) loading.style.display = "none";
            }
        }

        function updatePagination(total: number, limit: number) {
            if (
                !paginationControls ||
                !prevPageBtn ||
                !nextPageBtn ||
                !currentPageNum
            )
                return;

            const totalPages = Math.ceil(total / limit);

            if (totalPages > 1) {
                paginationControls.classList.remove("hidden");
                paginationControls.classList.add("flex");

                currentPageNum.textContent = currentPage.toString();

                prevPageBtn.disabled = currentPage <= 1;
                nextPageBtn.disabled = currentPage >= totalPages;
            } else {
                paginationControls.classList.add("hidden");
                paginationControls.classList.remove("flex");
            }
        }

        function renderMessages(messages: Message[]) {
            if (!messagesContainer) return;

            messages.forEach((msg) => {
                const date = new Date(msg.created_at);
                const formattedDate = format(date, "d. MMMM yyyy HH:mm", {
                    locale: sk,
                });

                const card = document.createElement("div");
                card.className =
                    "bg-white p-6 md:p-8 border border-gray-100 rounded-2xl md:rounded-[2rem] shadow-sm transition-all duration-300 hover:shadow-xl hover:border-[#0f62fe]/20 group";
                card.innerHTML = `
                    <div class="flex flex-col lg:flex-row justify-between lg:items-start gap-6 mb-8">
                        <div class="space-y-4 min-w-0 flex-1">
                            <div class="flex flex-wrap items-center gap-3">
                                <span class="px-3 py-1 bg-blue-50 text-[#0f62fe] text-[10px] font-black uppercase tracking-[0.15em] rounded-full border border-blue-100">Nová Správa</span>
                                <span class="flex items-center gap-1.5 text-xs text-gray-400 font-bold uppercase tracking-wider">
                                    ${CALENDAR_ICON}
                                    ${formattedDate}
                                </span>
                            </div>
                            <h3 class="text-xl md:text-2xl font-black text-gray-900 tracking-tight break-words">${escapeHtml(msg.subject || "(Bez predmetu)")}</h3>
                            <div class="flex flex-wrap items-center gap-4 text-xs md:text-sm">
                                <div class="flex items-center gap-2 font-black text-gray-900 bg-gray-50 px-3 py-1.5 rounded-lg border border-gray-100">
                                    <span class="w-2 h-2 rounded-full bg-green-500"></span>
                                    ${escapeHtml(msg.name)}
                                </div>
                                <a href="mailto:${escapeHtml(msg.email)}" class="text-[#0f62fe] font-bold hover:underline transition-colors break-all flex items-center gap-2 underline underline-offset-4 decoration-2 decoration-blue-100 hover:decoration-[#0f62fe]">
                                    ${ENVELOPE_ICON}
                                    ${escapeHtml(msg.email)}
                                </a>
                                ${
                                    msg.phone
                                        ? `
                                    <a href="tel:${escapeHtml(msg.phone)}" class="text-gray-600 font-bold hover:text-gray-900 transition-colors flex items-center gap-2">
                                        ${PHONE_ICON}
                                        ${escapeHtml(msg.phone)}
                                    </a>`
                                        : ""
                                }
                            </div>
                        </div>
                        <div class="flex shrink-0">
                            <button
                                onclick="window.deleteMessage(${msg.id})"
                                class="w-full lg:w-auto px-5 py-2.5 bg-gray-50 border border-gray-100 text-gray-400 hover:bg-red-50 hover:text-red-500 hover:border-red-100 transition-all duration-300 flex items-center justify-center gap-2 text-[10px] font-black uppercase tracking-widest rounded-xl"
                                title="Odstrániť správu natrvalo"
                            >
                                ${TRASH_ICON}
                                Odstrániť
                            </button>
                        </div>
                    </div>
                    <div class="bg-gray-50/50 p-6 md:p-8 rounded-xl md:rounded-[1.5rem] border-l-[6px] border-[#0f62fe] text-gray-700 whitespace-pre-wrap break-words leading-relaxed text-sm md:text-base font-medium shadow-inner italic">
                        ${escapeHtml(msg.message)}
                    </div>
                `;
                messagesContainer.appendChild(card);
            });
        }

        function escapeHtml(text: string): string {
            if (!text) return "";
            return text
                .replace(/&/g, "&amp;")
                .replace(/</g, "&lt;")
                .replace(/>/g, "&gt;")
                .replace(/"/g, "&quot;")
                .replace(/'/g, "&#039;");
        }

        // Global function for delete button
        (window as any).deleteMessage = async (id: number) => {
            if (confirm("Naozaj chcete vymazať túto správu?")) {
                try {
                    await api.admin.deleteMessage(id);
                    await loadMessages(); // Reload list
                } catch (error) {
                    console.error("Failed to delete message:", error);
                    alert("Nepodarilo sa vymazať správu.");
                }
            }
        };

        // Event listeners
        if (logoutBtn) {
            logoutBtn.addEventListener("click", async () => {
                try {
                    await api.admin.logout();
                    window.location.href = "/admin/login";
                } catch (error) {
                    console.error("Logout failed:", error);
                }
            });
        }

        if (refreshBtn) {
            refreshBtn.addEventListener("click", () => {
                currentPage = 1;
                loadMessages();
            });
        }

        if (prevPageBtn) {
            prevPageBtn.addEventListener("click", () => {
                if (currentPage > 1) {
                    currentPage--;
                    loadMessages();
                    window.scrollTo({ top: 0, behavior: "smooth" });
                }
            });
        }

        if (nextPageBtn) {
            nextPageBtn.addEventListener("click", () => {
                currentPage++;
                loadMessages();
                window.scrollTo({ top: 0, behavior: "smooth" });
            });
        }

        // Initial check
        checkAuth();
    </script>
</Layout>
