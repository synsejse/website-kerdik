---
import Layout from "../layouts/Layout.astro";
import PageHero from "../components/shared/PageHero.astro";
import Container from "../components/layout/Container.astro";
---

<Layout title="Cenník">
    <PageHero title="Cenník" />
    
    <section class="bg-gray-50" aria-labelledby="pricing-title">
        <Container>
            <h2
                id="pricing-title"
                class="m-0 mb-6 text-2xl md:text-3xl lg:text-4xl font-bold leading-tight relative pb-2 inline-block tracking-tight after:content-[''] after:absolute after:left-0 after:bottom-0 after:h-1.5 md:after:h-2 after:w-[58%] lg:after:w-[46%] after:bg-linear-to-r after:from-primary after:to-[#67a8ff] after:rounded-full after:shadow-[0_2px_6px_rgba(15,98,254,0.35)]"
            >
                Mesačný poplatok za správu
            </h2>

            <div class="grid gap-6 md:grid-cols-3 mb-12">
                <!-- Card 1: Bytový priestor -->
                <article
                    class="bg-white border border-gray-200 rounded-2xl p-6 md:p-8 shadow-sm transition-all duration-300 hover:shadow-xl hover:border-primary/20 hover:-translate-y-1"
                >
                    <h3 class="m-0 mb-4 text-xl font-bold text-gray-900">
                        Odmena správcu za bytový priestor
                    </h3>
                    <div class="mb-4">
                        <div class="text-4xl font-extrabold text-primary leading-tight">
                            8,00 €
                        </div>
                        <div class="text-sm text-gray-500 mt-1">
                            s DPH / mesiac / byt
                        </div>
                    </div>
                    <ul class="list-none p-0 m-0 space-y-2 text-sm text-gray-600">
                        <li class="flex items-start gap-2">
                            <span class="text-primary mt-0.5">✓</span>
                            <span>Komplexný výkon správy</span>
                        </li>
                        <li class="flex items-start gap-2">
                            <span class="text-primary mt-0.5">✓</span>
                            <span>Technická správa budovy</span>
                        </li>
                        <li class="flex items-start gap-2">
                            <span class="text-primary mt-0.5">✓</span>
                            <span>Ekonomická správa</span>
                        </li>
                        <li class="flex items-start gap-2">
                            <span class="text-primary mt-0.5">✓</span>
                            <span>Právna a legislatívna podpora</span>
                        </li>
                    </ul>
                </article>

                <!-- Card 2: Nebytový priestor -->
                <article
                    class="bg-white border border-gray-200 rounded-2xl p-6 md:p-8 shadow-sm transition-all duration-300 hover:shadow-xl hover:border-primary/20 hover:-translate-y-1"
                >
                    <h3 class="m-0 mb-4 text-xl font-bold text-gray-900">
                        Odmena správcu za nebytový priestor
                    </h3>
                    <div class="mb-2">
                        <div class="text-sm text-gray-500 italic">
                            (vylučujú sa pivnice)
                        </div>
                    </div>
                    <div class="mb-4">
                        <div class="text-4xl font-extrabold text-primary leading-tight">
                            0,10 €
                        </div>
                        <div class="text-sm text-gray-500 mt-1">
                            s DPH / m² / mesiac
                        </div>
                    </div>
                    <ul class="list-none p-0 m-0 space-y-2 text-sm text-gray-600">
                        <li class="flex items-start gap-2">
                            <span class="text-primary mt-0.5">✓</span>
                            <span>Správa kancelárií</span>
                        </li>
                        <li class="flex items-start gap-2">
                            <span class="text-primary mt-0.5">✓</span>
                            <span>Správa obchodných priestorov</span>
                        </li>
                        <li class="flex items-start gap-2">
                            <span class="text-primary mt-0.5">✓</span>
                            <span>Evidencia a rozúčtovanie nákladov</span>
                        </li>
                        <li class="flex items-start gap-2">
                            <span class="text-primary mt-0.5">✓</span>
                            <span>Technická podpora</span>
                        </li>
                    </ul>
                </article>

                <!-- Card 3: Parkovacie miesto -->
                <article
                    class="bg-white border border-gray-200 rounded-2xl p-6 md:p-8 shadow-sm transition-all duration-300 hover:shadow-xl hover:border-primary/20 hover:-translate-y-1"
                >
                    <h3 class="m-0 mb-4 text-xl font-bold text-gray-900">
                        Odmena správcu za parkovacie miesto
                    </h3>
                    <div class="mb-4">
                        <div class="text-4xl font-extrabold text-primary leading-tight">
                            1,80 €
                        </div>
                        <div class="text-sm text-gray-500 mt-1">
                            s DPH / mesiac / miesto
                        </div>
                    </div>
                    <ul class="list-none p-0 m-0 space-y-2 text-sm text-gray-600">
                        <li class="flex items-start gap-2">
                            <span class="text-primary mt-0.5">✓</span>
                            <span>Evidencia parkovacích miest</span>
                        </li>
                        <li class="flex items-start gap-2">
                            <span class="text-primary mt-0.5">✓</span>
                            <span>Správa garážových stojísk</span>
                        </li>
                        <li class="flex items-start gap-2">
                            <span class="text-primary mt-0.5">✓</span>
                            <span>Rozúčtovanie nákladov</span>
                        </li>
                        <li class="flex items-start gap-2">
                            <span class="text-primary mt-0.5">✓</span>
                            <span>Údržba a čistenie</span>
                        </li>
                    </ul>
                </article>
            </div>
        </Container>
    </section>

    <!-- Office Hours Section -->
    <section class="bg-white" aria-labelledby="office-hours-title">
        <Container>
            <h2
                id="office-hours-title"
                class="m-0 mb-6 text-2xl md:text-3xl lg:text-4xl font-bold leading-tight relative pb-2 inline-block tracking-tight after:content-[''] after:absolute after:left-0 after:bottom-0 after:h-1.5 md:after:h-2 after:w-[58%] lg:after:w-[46%] after:bg-linear-to-r after:from-primary after:to-[#67a8ff] after:rounded-full after:shadow-[0_2px_6px_rgba(15,98,254,0.35)]"
            >
                Úradné hodiny
            </h2>

            <div class="grid gap-4 md:grid-cols-2 lg:grid-cols-5 max-w-5xl">
                <!-- Monday -->
                <article class="bg-gray-50 border border-gray-200 rounded-xl p-5 text-center">
                    <h3 class="m-0 mb-3 text-lg font-bold text-gray-900">Pondelok</h3>
                    <div class="space-y-1 text-sm text-gray-600">
                        <div class="font-semibold">8:00 - 12:00</div>
                        <div class="font-semibold">13:00 - 16:00</div>
                    </div>
                </article>

                <!-- Tuesday -->
                <article class="bg-gray-50 border border-gray-200 rounded-xl p-5 text-center">
                    <h3 class="m-0 mb-3 text-lg font-bold text-gray-900">Utorok</h3>
                    <div class="space-y-1 text-sm text-gray-400 italic">
                        <div>nestránkový deň</div>
                    </div>
                </article>

                <!-- Wednesday -->
                <article class="bg-gray-50 border border-gray-200 rounded-xl p-5 text-center">
                    <h3 class="m-0 mb-3 text-lg font-bold text-gray-900">Streda</h3>
                    <div class="space-y-1 text-sm text-gray-600">
                        <div class="font-semibold">8:00 - 12:00</div>
                        <div class="font-semibold">13:00 - 17:00</div>
                    </div>
                </article>

                <!-- Thursday -->
                <article class="bg-gray-50 border border-gray-200 rounded-xl p-5 text-center">
                    <h3 class="m-0 mb-3 text-lg font-bold text-gray-900">Štvrtok</h3>
                    <div class="space-y-1 text-sm text-gray-400 italic">
                        <div>nestránkový deň</div>
                    </div>
                </article>

                <!-- Friday -->
                <article class="bg-gray-50 border border-gray-200 rounded-xl p-5 text-center">
                    <h3 class="m-0 mb-3 text-lg font-bold text-gray-900">Piatok</h3>
                    <div class="space-y-1 text-sm text-gray-600">
                        <div class="font-semibold">8:00 - 12:00</div>
                    </div>
                </article>
            </div>

            <div class="mt-8 p-6 bg-blue-50 border border-blue-200 rounded-xl">
                <p class="text-sm text-gray-600 mb-2">
                    <strong class="text-gray-900">Poznámka:</strong> V prípade potreby osobnej konzultácie mimo úradných hodín nás kontaktujte telefonicky alebo emailom.
                </p>
            </div>
        </Container>
    </section>
</Layout>
