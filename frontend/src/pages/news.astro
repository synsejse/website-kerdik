---
import Layout from "../layouts/Layout.astro";

type NewsItem = {
  date: string;
  title: string;
  excerpt: string;
};

const items: NewsItem[] = [
  {
    date: "2025-01-15",
    title: "Spustenie webu",
    excerpt: "Spustili sme novú webovú stránku. Tešíme sa na vašu spätnú väzbu."
  },
  {
    date: "2025-02-10",
    title: "Nová referenčná realizácia",
    excerpt: "Pridali sme novú ukážku práce v sekcii Referencie."
  },
  {
    date: "2025-03-01",
    title: "Aktualizácia ponuky",
    excerpt: "Rozšírili sme portfólio služieb a zjednodušili cenník."
  }
];
---

<Layout title="Aktuálne">
  <section class="intro">
    <h1>Aktuálne</h1>
    <p>
      Krátke novinky a oznámenia. Pre viac informácií nás neváhajte
      <a href="/contact">kontaktovať</a>.
    </p>
  </section>

  <section class="list">
    <ul>
      {
        items.map((item) => (
          <li class="news">
            <div class="meta">
              <time datetime={item.date}>
                {new Date(item.date).toLocaleDateString("sk-SK")}
              </time>
            </div>
            <div class="content">
              <h3>{item.title}</h3>
              <p>{item.excerpt}</p>
            </div>
          </li>
        ))
      }
    </ul>
  </section>

  <section class="more">
    <p>
      Zaujíma vás viac? Pozrite si <a href="/references">Referencie</a> alebo
      <a href="/documents">Dokumenty</a>.
    </p>
  </section>
</Layout>

<style>
  h1 {
    margin: 0 0 0.25rem;
    font-size: 2rem;
    line-height: 1.2;
  }

  .intro {
    margin: 1rem 0 1.25rem;
  }

  .intro a {
    color: #0f62fe;
    text-decoration: none;
  }

  .intro a:hover {
    text-decoration: underline;
  }

  .list ul {
    list-style: none;
    margin: 0;
    padding: 0;
    display: grid;
    gap: 0.75rem;
  }

  .news {
    display: grid;
    grid-template-columns: 140px 1fr;
    gap: 0.75rem;
    padding: 0.9rem 1rem;
    border: 1px solid #e5e7eb;
    border-radius: 12px;
    background: #fff;
  }

  .news time {
    font-variant-numeric: tabular-nums;
    color: #6b7280;
  }

  .news h3 {
    margin: 0 0 0.25rem;
    font-size: 1.05rem;
  }

  .news p {
    margin: 0;
    color: #374151;
  }

  .more {
    margin-top: 1.25rem;
    color: #374151;
  }

  .more a {
    color: #0f62fe;
    text-decoration: none;
  }

  .more a:hover {
    text-decoration: underline;
  }

  @media (max-width: 640px) {
    .news {
      grid-template-columns: 1fr;
    }
  }
</style>
