---
import Layout from "../layouts/Layout.astro";
import PageHero from "../components/shared/PageHero.astro";
import Container from "../components/layout/Container.astro";
---

<Layout title="Dokumenty">
    <PageHero title="Dokumenty" />
    <Container>
        <div class="grid gap-6 md:grid-cols-2 lg:grid-cols-3">
            <div class="p-6 bg-white border border-gray-200 rounded-xl shadow-sm hover:shadow-md transition-shadow">
                <h3 class="font-bold text-lg mb-2">Všeobecné obchodné podmienky</h3>
                <p class="text-sm text-gray-500 mb-4">Súbor PDF, 1.2 MB</p>
                <a href="#" class="text-primary font-bold hover:underline">Stiahnuť</a>
            </div>
            <!-- More documents can be added here -->
        </div>
    </Container>
</Layout>
