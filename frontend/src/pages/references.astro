---
import Layout from "../layouts/Layout.astro";
import PageHero from "../components/shared/PageHero.astro";
import Container from "../components/layout/Container.astro";
---

<Layout title="Referencie">
    <PageHero title="Referencie" />
    <Container>
        <div class="grid gap-8 sm:grid-cols-2 lg:grid-cols-3">
            <div class="space-y-4">
                <div
                    class="aspect-video bg-gray-100 rounded-xl overflow-hidden shadow-sm"
                >
                    <img
                        src="/images/carousel/carousel-01.jpg"
                        alt="Referencia 1"
                        class="w-full h-full object-cover"
                    />
                </div>
                <h3 class="font-bold text-lg">Bytový dom, Žilina</h3>
                <p class="text-sm text-gray-600 italic">
                    Komplexná zatepľovacia fasáda a revitalizácia loggií.
                </p>
            </div>
            <!-- More references here -->
        </div>
    </Container>
</Layout>
