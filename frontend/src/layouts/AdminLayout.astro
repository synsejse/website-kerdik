---
import "../styles/global.css";
import AdminHeader from "../components/layout/AdminHeader.astro";
import Footer from "../components/layout/Footer.astro";
import ScrollTop from "../components/shared/ScrollTop.astro";

export interface Props {
  title?: string;
  showFooter?: boolean;
  showScrollTop?: boolean;
  className?: string;
}

const {
  title = "Admin",
  showFooter = false,
  showScrollTop = false,
  className = ""
} = Astro.props;
---

<!doctype html>
<html lang="sk">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="icon" type="image/png" href="/favicon.png" />
    <title>{title}</title>
  </head>
  <body
    class:list={[
      "flex flex-col min-h-screen bg-gray-50 text-gray-900 leading-relaxed font-sans",
      className,
    ]}
  >
    <div class="sticky top-0 z-50">
      <AdminHeader title={title} />
    </div>

    <main class="w-full grow">
      <slot />
    </main>

    <script>
      (async function () {
        try {
          const resp = await fetch("/admin/check", { credentials: "same-origin" });
          const isAuth = resp.ok ? await resp.json() : false;
          const path = window.location.pathname.replace(/\/+$/, "");
          const onLogin = path === "/admin/login";

          if (!isAuth && !onLogin) {
            window.location.href = "/admin/login";
          } else if (isAuth && onLogin) {
            window.location.href = "/admin/messages";
          }
        } catch (e) {
          const path = window.location.pathname.replace(/\/+$/, "");
          if (path !== "/admin/login") {
            window.location.href = "/admin/login";
          }
        }
      })();
    </script>

    {showFooter && <Footer />}
    {showScrollTop && <ScrollTop />}
  </body>
</html>
