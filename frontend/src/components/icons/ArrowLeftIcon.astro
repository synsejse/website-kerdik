---
// Left arrow icon component
interface Props {
  class?: string;
}

const { class: className = "icon" } = Astro.props;
---

<svg
  class={className}
  xmlns="http://www.w3.org/2000/svg"
  viewBox="0 0 24 24"
  fill="none"
  stroke="currentColor"
  stroke-width="2"
  stroke-linecap="round"
  stroke-linejoin="round"
>
  <path d="M15 18l-6-6 6-6" />
</svg>

<style>
  .icon {
    width: 1.25rem;
    height: 1.25rem;
    flex-shrink: 0;
    display: block;
  }
</style>
