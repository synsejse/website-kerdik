---
export interface Props {
    /** Optional additional class names applied to the container */
    className?: string;
    /** Which HTML element to render as (defaults to div) */
    as?: keyof HTMLElementTagNameMap;
}

const {className = "", as = "div"} = Astro.props as Props;
const Tag = as;
---

<Tag class={`container ${className}`.trim()}>
    <slot/>
</Tag>

<style>
    .container {
        max-width: var(--container, 1100px);
        margin: 0 auto;
        padding: 2.4rem 1rem;
    }
</style>
