---
export interface Props {
    /** Optional additional class names applied to the container */
    className?: string;
    /** Which HTML element to render as (defaults to div) */
    as?: any;
}

const {className = "", as = "div"} = Astro.props;
const Tag = as;
---

<Tag class={`max-w-275 mx-auto px-4 py-10 md:py-16 ${className}`.trim()}>
    <slot/>
</Tag>

