<style>
    .site-footer {
        background-color: #1f2937;
        border-top: 1px solid rgba(255, 255, 255, 0.08);
        color: #f9fafb;
    }

    .footer-container {
        max-width: var(--container, 1100px);
        margin: 0 auto;
        padding: 2rem 1rem;
    }

    .brand {
        display: flex;
        align-items: center;
        justify-content: flex-start;
        margin-bottom: 1.25rem;
    }

    .brand-link {
        display: inline-flex;
        align-items: center;
    }

    .logo {
        height: 48px;
        width: auto;
        max-width: 220px;
    }

    .footer-grid {
        display: grid;
        gap: 1.25rem;
        grid-template-columns: 1fr;
        align-items: start;
    }

    .col-title {
        margin: 0 0 0.5rem;
        font-size: 0.95rem;
        letter-spacing: 0.06em;
        text-transform: uppercase;
    }

    .addr {
        font-style: normal;
        line-height: 1.5;
    }

    .map {
        margin: 0.5rem 0 0;
    }

    .map a {
        color: #0f62fe;
        text-decoration: none;
        font-weight: 600;
    }

    .map a:hover {
        text-decoration: underline;
    }

    .id-list {
        list-style: none;
        margin: 0.25rem 0 0;
        padding: 0;
        display: grid;
        gap: 0.35rem;
    }

    .id-list strong {
        font-weight: 700;
    }

    .menu {
        list-style: none;
        padding: 0;
        margin: 0.25rem 0 0;
        display: flex;
        flex-wrap: wrap;
        gap: 0.5rem 0.6rem;
    }

    .menu a {
        display: inline-block;
        padding: 0.4rem 0.65rem;
        border: 1px solid rgba(255, 255, 255, 0.2);
        border-radius: 999px;
        background: transparent;
        color: #f9fafb;
        text-decoration: none;
        font-size: 0.85rem;
        font-weight: 600;
        letter-spacing: 0.02em;
        transition: all 0.2s ease-in-out;
        box-shadow: 0 1px 0 rgba(17, 24, 39, 0.04);
    }

    .menu a:hover {
        color: #0f62fe;
        border-color: #93c5fd;
        box-shadow: 0 2px 8px rgba(15, 98, 254, 0.08);
    }

    @media (min-width: 720px) {
        .footer-grid {
            grid-template-columns: repeat(3, 1fr);
        }

        .brand {
            margin-bottom: 1.5rem;
        }

        .logo {
            height: 52px;
        }
    }

    @media (max-width: 480px) {
        .logo {
            height: 44px;
        }
    }
</style>
