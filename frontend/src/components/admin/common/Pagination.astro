---
import ChevronLeft from "../../icons/ChevronLeft.astro";
import ChevronRight from "../../icons/ChevronRight.astro";

interface Props {
  show: boolean;
  currentPage: number;
}

const { show, currentPage } = Astro.props;
---

<div id="pagination-controls" class:list={["flex flex-wrap justify-center items-center gap-4 md:gap-6 mt-12", { hidden: !show }]}>
  <button
    id="prev-page"
    class="flex items-center gap-2 px-4 md:px-5 py-2.5 bg-white border border-gray-200 rounded-xl text-xs font-black uppercase tracking-widest text-gray-700 hover:bg-gray-50 hover:border-primary/30 disabled:opacity-50 disabled:cursor-not-allowed active:scale-95 group transition-all"
  >
    <ChevronLeft class="h-3 w-3 transition-transform group-hover:-translate-x-0.5 group-disabled:translate-x-0" />
    <span class="hidden sm:inline">Predchádzajúca</span>
    <span class="sm:hidden">Späť</span>
  </button>
  <span id="page-info" class="text-xs font-black uppercase tracking-widest text-gray-400">
    Strana <span id="current-page-num" class="text-primary">{currentPage}</span>
  </span>
  <button
    id="next-page"
    class="flex items-center gap-2 px-4 md:px-5 py-2.5 bg-white border border-gray-200 rounded-xl text-xs font-black uppercase tracking-widest text-gray-700 hover:bg-gray-50 hover:border-primary/30 disabled:opacity-50 disabled:cursor-not-allowed active:scale-95 group transition-all"
  >
    <span class="hidden sm:inline">Nasledujúca</span>
    <span class="sm:hidden">Ďalej</span>
    <ChevronRight class="h-3 w-3 transition-transform group-hover:translate-x-0.5 group-disabled:translate-x-0" />
  </button>
</div>
