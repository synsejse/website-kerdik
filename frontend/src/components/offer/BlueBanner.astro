---
import Container from "../layout/Container.astro";
---

<section class="blue-banner" aria-labelledby="blue-banner-title">
    <Container>
        <div class="blue-banner__container">
            <h2 id="blue-banner-title" class="blue-banner__title">
                ŽIADNY PROJEKT NIE JE PRE NÁS DOSŤ VEĽKÝ
            </h2>
            <a class="blue-banner__button" href="/contact">KONTAKTOVAŤ &gt;&gt;</a>
        </div>
    </Container>
</section>

<style>
    .blue-banner {
        background: #0b66c3;
        color: #ffffff;
    }

    .blue-banner__container {
        display: flex;
        align-items: center;
        justify-content: space-between;
        gap: 1.5rem;
    }

    .blue-banner__title {
        margin: 0;
        font-size: clamp(1rem, 1.8vw, 1.25rem);
        letter-spacing: 0.02em;
        font-weight: 700;
    }

    .blue-banner__button {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        white-space: nowrap;
        background: #ffffff;
        color: #0b66c3;
        padding: 0.55rem 0.95rem;
        border-radius: 6px;
        text-decoration: none;
        font-weight: 800;
        border: 2px solid transparent;
        transition: background 0.2s ease, color 0.2s ease, transform 0.1s ease;
    }

    .blue-banner__button:focus,
    .blue-banner__button:hover {
        background: #e8f2ff;
        transform: translateY(-1px);
    }
</style>