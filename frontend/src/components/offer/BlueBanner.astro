---
import Container from "../layout/Container.astro";
---

<section class="bg-primary text-white" aria-labelledby="blue-banner-title">
    <Container className="py-8 md:py-12">
        <div
            class="flex flex-col md:flex-row items-center justify-between gap-6 md:gap-8"
        >
            <h2
                id="blue-banner-title"
                class="m-0 text-lg md:text-xl lg:text-2xl font-bold tracking-wide text-center md:text-left"
            >
                ŽIADNY BYTOVÝ DOM NIE JE PRE NÁS DOSŤ VEĽKÝ
            </h2>
            <a
                class="inline-flex items-center justify-center whitespace-nowrap bg-white text-primary px-6 py-2.5 rounded-lg no-underline font-black text-sm uppercase tracking-wider transition-all duration-200 border-2 border-transparent hover:bg-blue-50 hover:-translate-y-0.5 active:translate-y-0 shadow-md"
                href="/contact"
            >
                KONTAKTOVAŤ &gt;&gt;
            </a>
        </div>
    </Container>
</section>
