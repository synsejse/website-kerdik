<section class="blue-banner" aria-labelledby="blue-banner-title">
  <div class="blue-banner__container">
    <h2 id="blue-banner-title" class="blue-banner__title">
      ŽIADNY PROJEKT NIE JE PRE NÁS DOSŤ VEĽKÝ
    </h2>
    <a class="blue-banner__button" href="/contact">KONTAKTOVAŤ &gt;&gt;</a>
  </div>
</section>

<style>
  .blue-banner {
    /* Small, ad-style horizontal banner */
    background: #0b66c3; /* blue */
    color: #ffffff;
  }

  .blue-banner__container {
    max-width: var(--container, 1100px);
    width: 100%;
    margin: 0 auto;
    padding: 0.85rem 1rem; /* compact vertical padding */
    min-height: 96px; /* keep it short on Y axis */
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 0.75rem;
  }

  .blue-banner__title {
    margin: 0;
    font-size: clamp(1rem, 1.8vw, 1.25rem);
    line-height: 1.25;
    letter-spacing: 0.02em;
    font-weight: 700;
  }

  .blue-banner__button {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    white-space: nowrap;
    background: #ffffff;
    color: #0b66c3;
    padding: 0.55rem 0.95rem; /* smaller button */
    border-radius: 6px;
    text-decoration: none;
    font-weight: 800;
    border: 2px solid transparent;
    transition: background 0.2s ease, color 0.2s ease, transform 0.1s ease;
  }

  .blue-banner__button:focus,
  .blue-banner__button:hover {
    background: #e8f2ff;
    transform: translateY(-1px);
  }

  @media (max-width: 720px) {
    .blue-banner__container {
      flex-direction: column;
      align-items: flex-start;
      gap: 0.75rem;
      min-height: auto; /* let content define height on small screens */
    }
    .blue-banner__button {
      width: auto;
    }
  }
</style>
