---
// Hero Carousel component with image backgrounds and content slides
import ArrowLeftIcon from "./icons/ArrowLeftIcon.astro";
import ArrowRightIcon from "./icons/ArrowRightIcon.astro";

interface Slide {
    image: string;
    title: string;
    description: string;
}

const slides: Slide[] = [
    {
        image: "/carousel/carousel-01.jpg",
        title: "REVITALIZÁCIA RODINNÝCH DOMOV",
        description:
            "Výstavba rodinných domov na krúč, rekonštrukcie, zateplenie, fasády, okná, dvere. Komplexná revitalizácia rodinných domov.",
    },
    {
        image: "/carousel/carousel-02.jpg",
        title: "KOMPLEXNÁ REVITALIZÁCIA BYTOVÝCH DOMOV",
        description:
            "Komplexná revitalizácia bytového domu obsahuje zateplenie obvodového plášťa, termoizoláciu ...",
    },
    {
        image: "/carousel/carousel-03.jpg",
        title: "S NAŠOU STRECHOU BUDETE V SUCHU",
        description:
            "Izolácie, zateplenie a rekonštrukcie plochých striech bytových domov. Výstavba všetkých typov striech bytových a rodinných domov.",
    },
    {
        image: "/carousel/carousel-04.jpg",
        title: "MODERNÉ RIADENIE NAJMODERNEJŠIE TECHNOLÓGIE",
        description:
            "Držime krok s dobou, zákazníkom ponúkame najmodernejšie technológie.",
    },
];
---

<section class="hero-carousel">
    <div class="carousel-container">
        <div class="slides-wrapper">
            {
                slides.map((slide, index) => (
                    <div class="slide" data-slide={index}>
                        <img
                            src={slide.image}
                            alt={slide.title}
                            class="slide-image"
                            loading="lazy"
                        />
                        <div class="slide-overlay" />
                        <div class="slide-content">
                            <h1 class="slide-title">{slide.title}</h1>
                            <p class="slide-description">{slide.description}</p>
                            <a href="/about" class="slide-button">
                                Dozvedieť sa viac
                            </a>
                        </div>
                    </div>
                ))
            }
        </div>

        <div class="carousel-controls">
            <button class="carousel-btn prev" aria-label="Predchádzajúci slide">
                <ArrowLeftIcon />
            </button>
            <button class="carousel-btn next" aria-label="Nasledujúci slide">
                <ArrowRightIcon />
            </button>
        </div>

        <div class="carousel-dots">
            {
                slides.map((_, index) => (
                    <button
                        class="dot"
                        data-slide={index}
                        aria-label={`Slide ${index + 1}`}
                    />
                ))
            }
        </div>

        <div class="carousel-progress-bar"></div>
    </div>
</section>

<style>
    .hero-carousel {
        height: clamp(380px, 70vh, 700px);
        position: relative;
        overflow: hidden;
    }

    .carousel-container {
        position: relative;
        height: 100%;
    }

    .slides-wrapper {
        position: relative;
        height: 100%;
    }

    .slide {
        position: absolute;
        inset: 0;
        opacity: 0;
        transition: opacity 0.8s ease-in-out;
    }
    .slide-image {
        position: absolute;
        inset: 0;
        object-fit: cover;
        object-position: center;
        width: 100%;
        height: 100%;
    }
    /* Optional contain mode (add data-fit="contain" to .slide if desired) */
    .slide[data-fit="contain"] .slide-image {
        object-fit: contain;
        background: #000;
    }

    .slide.active {
        opacity: 1;
    }

    .slide-overlay {
        position: absolute;
        inset: 0;
        background: rgba(0, 0, 0, 0.4);
    }

    .slide-content {
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        text-align: center;
        color: white;
        width: 90%;
        max-width: 600px;
        padding: 0 clamp(2.75rem, 8vw, 5rem);
        box-sizing: border-box;
        z-index: 10;
        word-wrap: break-word;
        overflow-wrap: anywhere;
    }

    .slide-title {
        margin: 0 0 1rem;
        font-size: 3rem;
        font-weight: 700;
        line-height: 1.2;
        text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.5);
    }

    .slide-description {
        margin: 0 0 2rem;
        font-size: 1.25rem;
        line-height: 1.5;
        text-shadow: 1px 1px 3px rgba(0, 0, 0, 0.5);
    }

    .slide-button {
        display: inline-block;
        padding: 0.875rem 2rem;
        background-color: #0f62fe;
        color: white;
        text-decoration: none;
        font-weight: 600;
        border-radius: 0.375rem;
        transition: all 0.3s ease;
        border: 2px solid #0f62fe;
    }

    .slide-button:hover {
        background-color: transparent;
        color: white;
    }

    .carousel-controls {
        position: absolute;
        top: 50%;
        left: 0;
        right: 0;
        transform: translateY(-50%);
        display: flex;
        justify-content: space-between;
        padding: 0 1rem;
        z-index: 20;
        pointer-events: none;
    }

    .carousel-btn {
        pointer-events: auto;
        width: 3rem;
        height: 3rem;
        background-color: rgba(255, 255, 255, 0.3);
        border: none;
        color: white;
        /* Use SVG icons for consistent centering; reset text metrics */
        line-height: 0;
        cursor: pointer;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        transition: all 0.3s ease;
    }

    .carousel-btn:hover {
        background-color: rgba(255, 255, 255, 0.6);
    }

    .carousel-dots {
        position: absolute;
        bottom: 2rem;
        left: 50%;
        transform: translateX(-50%);
        display: flex;
        gap: 0.75rem;
        z-index: 20;
    }

    .dot {
        width: 0.75rem;
        height: 0.75rem;
        border-radius: 50%;
        border: 2px solid rgba(255, 255, 255, 0.6);
        background-color: transparent;
        cursor: pointer;
        transition: all 0.3s ease;
        padding: 0;
    }

    .dot.active {
        background-color: white;
        border-color: white;
    }

    .dot:hover {
        border-color: white;
    }

    .carousel-progress-bar {
        position: absolute;
        bottom: 0;
        left: 0;
        height: 3px;
        background-color: #0f62fe;
        width: 0;
        transition: width 0.1s linear;
    }

    @media (max-width: 768px) {
        .hero-carousel {
            height: clamp(340px, 60vh, 600px);
        }

        .slide-title {
            font-size: 2rem;
        }

        .slide-description {
            font-size: 1rem;
        }

        .slide-content {
            padding: 0 3rem; /* Reserve space from side nav buttons */
        }

        .carousel-btn {
            width: 2.5rem;
            height: 2.5rem;
            /* SVG icons handle their own size */
        }

        .carousel-dots {
            bottom: 1rem;
            gap: 0.5rem;
        }

        .dot {
            width: 0.6rem;
            height: 0.6rem;
        }
    }

    @media (max-width: 480px) {
        .hero-carousel {
            height: clamp(300px, 50vh, 520px);
        }

        .slide-title {
            font-size: 1.4rem;
        }

        .slide-description {
            font-size: 0.9rem;
            margin: 0 0 1rem;
        }

        .slide-content {
            padding: 0 2rem; /* Extra wrap space for very small widths */
        }

        .slide-button {
            padding: 0.75rem 1.25rem;
            font-size: 0.85rem;
        }

        .carousel-btn {
            width: 1.75rem;
            height: 1.75rem;
            /* SVG icons handle their own size */
        }
    }
</style>

<script>
    let currentSlide = 0;
    let autoRotateTimer: number;
    const slides = document.querySelectorAll(".slide");
    const dots = document.querySelectorAll(".dot");
    const nextBtn = document.querySelector(".carousel-btn.next");
    const prevBtn = document.querySelector(".carousel-btn.prev");
    const progressBar = document.querySelector(
        ".carousel-progress-bar",
    ) as HTMLElement;
    const autoRotateDuration = 6000; // 6 seconds
    let progressInterval: number;

    function showSlide(n: number) {
        slides.forEach((slide) => slide.classList.remove("active"));
        dots.forEach((dot) => dot.classList.remove("active"));

        if (n >= slides.length) currentSlide = 0;
        if (n < 0) currentSlide = slides.length - 1;

        slides[currentSlide].classList.add("active");
        dots[currentSlide].classList.add("active");
    }

    function resetAutoRotate() {
        clearInterval(autoRotateTimer);
        clearInterval(progressInterval);
        updateProgressBar();
        autoRotateTimer = setInterval(nextSlide, autoRotateDuration);
        startProgressAnimation();
    }

    function updateProgressBar() {
        if (progressBar) {
            progressBar.style.width = "0%";
        }
    }

    function startProgressAnimation() {
        let elapsed = 0;
        const updateInterval = 50; // Update every 50ms
        progressInterval = setInterval(() => {
            elapsed += updateInterval;
            const progress = (elapsed / autoRotateDuration) * 100;
            if (progressBar) {
                progressBar.style.width = Math.min(progress, 100) + "%";
            }
            if (elapsed >= autoRotateDuration) {
                clearInterval(progressInterval);
            }
        }, updateInterval);
    }

    function nextSlide() {
        currentSlide++;
        showSlide(currentSlide);
        clearInterval(progressInterval);
        updateProgressBar();
        startProgressAnimation();
    }

    function prevSlide() {
        currentSlide--;
        showSlide(currentSlide);
        clearInterval(progressInterval);
        updateProgressBar();
        startProgressAnimation();
    }

    function goToSlide(n: number) {
        currentSlide = n;
        showSlide(currentSlide);
    }

    // Event listeners
    nextBtn?.addEventListener("click", () => {
        nextSlide();
        resetAutoRotate();
    });

    prevBtn?.addEventListener("click", () => {
        prevSlide();
        resetAutoRotate();
    });

    dots.forEach((dot, index) => {
        dot.addEventListener("click", () => {
            goToSlide(index);
            resetAutoRotate();
        });
    });

    // Auto rotate every 6 seconds
    autoRotateTimer = setInterval(nextSlide, autoRotateDuration);

    // Show first slide on load
    showSlide(0);
    startProgressAnimation();
</script>
