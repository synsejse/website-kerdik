---
import Container from "../layout/Container.astro";
export interface Props {
    imageSrc?: string;
    imageAlt?: string;
    title?: string;
}

const {
    imageSrc = "/images/banners/intro-banner.jpg",
    imageAlt = "MK-SBD – Kvalita, spoľahlivosť, tradícia",
    title = "KVALITA / SPOĽAHLIVOSŤ / TRADÍCIA",
} = Astro.props;
---

<section class="bg-white" aria-labelledby="intro-title">
    <Container>
        <div
            class="grid lg:grid-cols-[1.1fr_0.9fr] gap-6 lg:gap-14 items-center"
        >
            <div class="grid gap-4">
                <h2
                    id="intro-title"
                    class="m-0 mb-3 text-2xl md:text-3xl lg:text-4xl font-bold leading-tight relative pb-2 inline-block tracking-tight after:content-[''] after:absolute after:left-0 after:bottom-0 after:h-1.5 md:after:h-2 after:w-[58%] lg:after:w-[46%] after:bg-linear-to-r after:from-primary after:to-[#67a8ff] after:rounded-full after:shadow-[0_2px_6px_rgba(15,98,254,0.35)]"
                >
                    {title}
                </h2>
                <p class="mt-2 mb-4 text-[#374151] text-base leading-relaxed">
                    Spoločnosť MK-SBD s.r.o. sa zameriava na komplexnú
                    správu bytových domov a nebytových priestorov. Poskytujeme
                    profesionálne služby v oblasti správy bytov od roku 2002.
                </p>

                <div class="grid md:grid-cols-2 gap-4">
                    <article
                        class="border border-gray-200 rounded-xl bg-white p-4 shadow-sm"
                    >
                        <h3
                            class="m-0 mb-1.5 text-[1.05rem] font-bold leading-tight"
                        >
                            Technická správa budov
                        </h3>
                        <p class="m-0 text-[#374151] text-sm">
                            Komplexný výkon správy bytových domov, zabezpečenie
                            opráv a údržby, preventívnej údržby a odstraňovanie
                            havárií, revízie podľa platnej legislatívy.
                        </p>
                    </article>

                    <article
                        class="border border-gray-200 rounded-xl bg-white p-4 shadow-sm"
                    >
                        <h3
                            class="m-0 mb-1.5 text-[1.05rem] font-bold leading-tight"
                        >
                            Ekonomická správa
                        </h3>
                        <p class="m-0 text-[#374151] text-sm">
                            Viac ako 21 rokov skúseností v správe bytových domov.
                            Vedenie účtovníctva, evidencia úhrad, vymáhanie
                            nedoplatkov, spravovanie fondu prevádzky a údržby.
                        </p>
                    </article>
                </div>
            </div>

            <figure class="m-0">
                <img
                    src={imageSrc}
                    alt={imageAlt}
                    class="w-full h-auto lg:max-h-105 rounded-xl shadow-[0_4px_16px_rgba(17,24,39,0.08)] object-cover"
                    loading="lazy"
                />
            </figure>
        </div>
    </Container>
</section>
