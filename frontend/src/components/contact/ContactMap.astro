---
import Container from "../layout/Container.astro";
---

<section class="contact-map" aria-labelledby="contact-map-title">
    <Container>
        <h2 id="contact-map-title">Mapa</h2>
        <div class="map-wrapper">
            <iframe
                    title="Mapa - Å D STAVBY"
                    src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d651.773562417979!2d18.71992812923502!3d49.19877159870765!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x47145ec4dc52461d%3A0xda695ee27625ef5d!2zTsOhbWVzdGllIHN2w6R0w6lobyBKw6FuYSBCb3NjYSAxMjAsIDAxMCAwNCDFvWlsaW5hLVrDoXZvZGll!5e0!3m2!1ssk!2ssk!4v1591867718110!5m2!1ssk!2ssk"
                    allowfullscreen
                    loading="lazy"
                    referrerpolicy="no-referrer-when-downgrade"></iframe>
        </div>
    </Container>
</section>

<style>
    .sr-only {
        position: absolute;
        width: 1px;
        height: 1px;
        padding: 0;
        margin: -1px;
        overflow: hidden;
        clip: rect(0, 0, 0, 0);
        white-space: nowrap;
        border: 0;
    }

    .contact-map {
        background: #f5f5f5;
    }

    #contact-map-title {
        margin: 0 0 1rem 0;
        font-size: 1.5rem;
        position: relative;
        display: inline-block;
        padding-bottom: 0.15em;
    }

    #contact-map-title::after {
        content: "";
        position: absolute;
        left: 0;
        bottom: 0.02em;
        height: 0.22em;
        width: 58%;
        background: linear-gradient(90deg, #0f62fe 0%, #67a8ff 100%);
        border-radius: 999px;
        box-shadow: 0 2px 6px rgba(15, 98, 254, 0.35);
    }

    .map-wrapper {
        width: 100%;
        aspect-ratio: 16 / 9;
        max-height: 70vh;
        background: #f5f5f5;
    }

    .map-wrapper iframe {
        border: 0;
        width: 100%;
        height: 100%;
        display: block;
    }
</style>
