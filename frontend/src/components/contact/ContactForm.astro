---
import Container from "../layout/Container.astro";
---

<section class="contact-form" aria-labelledby="contact-form-title">
    <Container>
        <h2 id="contact-form-title">Napíšte nám</h2>
        <form action="/contact/message" method="post" novalidate>
            <!-- Anti-bot field (hidden from users) -->
            <div class="sr-only" aria-hidden="true">
                <label for="company">Company</label>
                <input id="company" name="company" type="text" tabindex="-1" autocomplete="off"/>
            </div>

            <div class="grid">
                <div class="field">
                    <label for="name">Meno a priezvisko</label>
                    <input id="name" name="name" type="text" required placeholder="Vaše meno"/>
                </div>
                <div class="field">
                    <label for="email">Email</label>
                    <input id="email" name="email" type="email" required placeholder="vas@email.sk"/>
                </div>
                <div class="field">
                    <label for="phone">Telefón (nepovinné)</label>
                    <input id="phone" name="phone" type="tel" placeholder="+421 900 000 000"/>
                </div>
                <div class="field">
                    <label for="subject">Predmet (nepovinné)</label>
                    <input id="subject" name="subject" type="text" placeholder="Téma správy"/>
                </div>
            </div>

            <div class="field">
                <label for="message">Správa</label>
                <textarea id="message" name="message" rows="6" required placeholder="Vaša správa..."></textarea>
            </div>

            <div class="actions">
                <button type="submit" class="btn-primary">Odoslať správu</button>
            </div>
        </form>
    </Container>
</section>

<style>
    .sr-only {
        position: absolute;
        width: 1px;
        height: 1px;
        padding: 0;
        margin: -1px;
        overflow: hidden;
        clip: rect(0, 0, 0, 0);
        white-space: nowrap;
        border: 0;
    }

    .contact-form {
        background: #ffffff;
    }

    #contact-form-title {
        margin: 0 0 1rem 0;
        font-size: 1.5rem;
        position: relative;
        display: inline-block;
        padding-bottom: 0.15em;
    }

    #contact-form-title::after {
        content: "";
        position: absolute;
        left: 0;
        bottom: 0.02em;
        height: 0.22em;
        width: 58%;
        background: linear-gradient(90deg, #0f62fe 0%, #67a8ff 100%);
        border-radius: 999px;
        box-shadow: 0 2px 6px rgba(15, 98, 254, 0.35);
    }

    form {
        background: #ffffff;
        border: 1px solid #e5e7eb;
        border-radius: 10px;
        padding: 1rem;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.04);
    }

    .grid {
        display: grid;
        grid-template-columns: repeat(2, minmax(0, 1fr));
        gap: 1rem;
    }

    @media (max-width: 700px) {
        .grid {
            grid-template-columns: 1fr;
        }
    }

    .field {
        display: flex;
        flex-direction: column;
        gap: 0.4rem;
        margin-bottom: 1rem;
    }

    label {
        font-size: 0.95rem;
        color: #1f2937;
    }

    input[type="text"],
    input[type="email"],
    input[type="tel"],
    textarea {
        appearance: none;
        border: 1px solid #e5e7eb;
        border-radius: 8px;
        padding: 0.65rem 0.75rem;
        font-size: 1rem;
        outline: none;
        background: #fff;
        color: #111827;
    }

    textarea {
        resize: vertical;
        max-width: 100%;
    }

    input:focus,
    textarea:focus {
        border-color: #9ca3af;
        box-shadow: 0 0 0 3px rgba(156, 163, 175, 0.25);
    }

    .actions {
        margin-top: 0.5rem;
        display: flex;
        justify-content: flex-end;
    }

    .btn-primary {
        background: #1f2937;
        color: #fff;
        border: none;
        padding: 0.75rem 1.1rem;
        border-radius: 8px;
        font-size: 1rem;
        cursor: pointer;
    }

    .btn-primary:hover {
        background: #111827;
    }
</style>
