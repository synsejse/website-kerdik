---
import PhoneIcon from "../icons/Phone.astro";
import EmailIcon from "../icons/Envelope.astro";
import LocationIcon from "../icons/LocationDot.astro";
import Container from "../layout/Container.astro";
---

<section class="contact-cards" aria-labelledby="contact-cards-title">
    <Container>
        <h2 id="contact-cards-title">Kontaktné informácie</h2>
        <div class="cards-grid">
            <!-- Address -->
            <article class="card">
                <div class="card-icon" aria-hidden="true">
                    <LocationIcon width={28} height={28} fill="currentColor"/>
                </div>
                <div class="card-content">
                    <h3 class="card-title">ŠD - STAVBY</h3>
                    <p class="card-text">Nám. sv. J. Bosca 120, Žilina-Bánová</p>
                </div>
            </article>

            <!-- Phone numbers -->
            <article class="card">
                <div class="card-icon" aria-hidden="true">
                    <PhoneIcon width={28} height={28} fill="currentColor"/>
                </div>
                <div class="card-content">
                    <h3 class="card-title">Telefón</h3>
                    <p class="card-text">
                        Vladimír Špánik: <a href="tel:+421905167228">+421 905 167 228</a><br/>
                        Miroslav Davidík: <a href="tel:+421903711356">+421 903 711 356</a>
                    </p>
                </div>
            </article>

            <!-- Email / Web -->
            <article class="card">
                <div class="card-icon" aria-hidden="true">
                    <EmailIcon width={28} height={28} fill="currentColor"/>
                </div>
                <div class="card-content">
                    <h3 class="card-title">Email & Web</h3>
                    <p class="card-text">
                        Email: <a href="mailto:info@sd-stavby.sk">info@sd-stavby.sk</a><br/>
                        Web: <a href="https://www.sd-stavby.sk" rel="noopener" target="_blank">www.sd-stavby.sk</a>
                    </p>
                </div>
            </article>
        </div>
    </Container>
</section>

<style>
    .sr-only {
        position: absolute;
        width: 1px;
        height: 1px;
        padding: 0;
        margin: -1px;
        overflow: hidden;
        clip: rect(0, 0, 0, 0);
        white-space: nowrap;
        border: 0;
    }

    .contact-cards {
        background: #f5f5f5;
    }

    #contact-cards-title {
        margin: 0 0 1rem 0;
        font-size: 1.5rem;
        position: relative;
        display: inline-block;
        padding-bottom: 0.15em;
    }

    #contact-cards-title::after {
        content: "";
        position: absolute;
        left: 0;
        bottom: 0.02em;
        height: 0.22em;
        width: 58%;
        background: linear-gradient(90deg, #0f62fe 0%, #67a8ff 100%);
        border-radius: 999px;
        box-shadow: 0 2px 6px rgba(15, 98, 254, 0.35);
    }

    .cards-grid {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        gap: 1rem;
    }

    @media (max-width: 900px) {
        .cards-grid {
            grid-template-columns: 1fr;
        }
    }

    .card {
        display: flex;
        gap: 0.9rem;
        align-items: flex-start;
        background: #fff;
        border: 1px solid #e5e7eb;
        border-radius: 10px;
        padding: 1.1rem 1rem;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.04);
    }

    .card-icon {
        color: #1f2937;
        flex: 0 0 auto;
        display: grid;
        place-items: center;
        width: 42px;
        height: 42px;
        border-radius: 8px;
        background: #f3f4f6;
    }

    .card-title {
        margin: 0 0 0.25rem 0;
        font-size: 1rem;
    }

    .card-text {
        margin: 0;
        color: #4b5563;
        font-size: 0.95rem;
    }

    .card a {
        color: #1f2937;
        text-decoration: none;
    }

    .card a:hover {
        text-decoration: underline;
    }
</style>
