---
import PhoneIcon from "../icons/Phone.astro";
import EmailIcon from "../icons/Envelope.astro";
import LocationIcon from "../icons/LocationDot.astro";
import Container from "../layout/Container.astro";
---

<section class="bg-gray-50" aria-labelledby="contact-cards-title">
    <Container>
        <h2 id="contact-cards-title" class="m-0 mb-8 text-xl lg:text-2xl font-bold leading-tight relative pb-2 inline-block tracking-tight after:content-[''] after:absolute after:left-0 after:bottom-0 after:h-1.5 after:w-[58%] after:bg-linear-to-r after:from-[#0f62fe] after:to-[#67a8ff] after:rounded-full after:shadow-[0_2px_6px_rgba(15,98,254,0.35)]">Kontaktné informácie</h2>
        <div class="grid lg:grid-cols-3 gap-4 md:gap-6">
            <!-- Address -->
            <article class="flex gap-4 items-start bg-white border border-gray-200 rounded-xl p-5 shadow-sm transition-all duration-300 hover:shadow-md hover:border-[#0f62fe]/20">
                <div class="flex-none grid place-items-center w-11 h-11 rounded-lg bg-gray-100 text-gray-700" aria-hidden="true">
                    <LocationIcon width={28} height={28} fill="currentColor"/>
                </div>
                <div class="flex-1">
                    <h3 class="m-0 mb-1 text-base font-bold text-gray-900 border-none px-0 py-0 after:content-none shadow-none">MK-SBD</h3>
                    <p class="m-0 text-sm text-gray-600 leading-relaxed">Papiernická 1788/8, 034 01 Ružomberok</p>
                </div>
            </article>

            <!-- Phone numbers -->
            <article class="flex gap-4 items-start bg-white border border-gray-200 rounded-xl p-5 shadow-sm transition-all duration-300 hover:shadow-md hover:border-[#0f62fe]/20">
                <div class="flex-none grid place-items-center w-11 h-11 rounded-lg bg-gray-100 text-gray-700" aria-hidden="true">
                    <PhoneIcon width={28} height={28} fill="currentColor"/>
                </div>
                <div class="flex-1">
                    <h3 class="m-0 mb-1 text-base font-bold text-gray-900 border-none px-0 py-0 after:content-none shadow-none">Telefón</h3>
                    <p class="m-0 text-sm text-gray-600 leading-relaxed">
                        Miroslav Kerdík: <a href="tel:+421903123595" class="text-gray-900 no-underline font-semibold hover:underline">+421 903 123 595</a><br/>
                        Fax: <a href="tel:+421444341010" class="text-gray-900 no-underline font-semibold hover:underline">+421 44 434 1010</a>
                    </p>
                </div>
            </article>

            <!-- Email / Web -->
            <article class="flex gap-4 items-start bg-white border border-gray-200 rounded-xl p-5 shadow-sm transition-all duration-300 hover:shadow-md hover:border-[#0f62fe]/20">
                <div class="flex-none grid place-items-center w-11 h-11 rounded-lg bg-gray-100 text-gray-700" aria-hidden="true">
                    <EmailIcon width={28} height={28} fill="currentColor"/>
                </div>
                <div class="flex-1">
                    <h3 class="m-0 mb-1 text-base font-bold text-gray-900 border-none px-0 py-0 after:content-none shadow-none">Email & Web</h3>
                    <p class="m-0 text-sm text-gray-600 leading-relaxed overflow-hidden">
                        Email: <a href="mailto:miro@banicne.sk" class="text-gray-900 no-underline font-semibold hover:underline break-all">miro@banicne.sk</a><br/>
                        Web: <a href="https://www.banicne.sk" rel="noopener" target="_blank" class="text-gray-900 no-underline font-semibold hover:underline">www.banicne.sk</a>
                    </p>
                </div>
            </article>
        </div>
    </Container>
</section>
